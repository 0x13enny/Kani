<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:include filename="$(find kani_description)/urdf/base.transmission.xacro"/>
  <xacro:include filename="$(find kani_description)/urdf/base.gazebo.xacro" />

  <xacro:property name="wheel_mesh" value="package://kani_description/meshes/wheel.stl" />
  <xacro:property name="steer_mesh" value="package://kani_description/meshes/steer2.stl" />
  <xacro:property name="steer_mesh_mirror" value="package://kani_description/meshes/steer2_m.stl" />
  <!-- <xacro:property name="steer_eff" value="" />
  <xacro:property name="steer_vel" value="" /> -->


  <xacro:macro name="rf_wheel" params="parent x y z">
    <link name="rightFront_wheel_link">
      <inertial>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" /><!--0.00222524026865972 0.173009757872407 -0.000157420245397055-->
        <mass
          value="0.0963917377366023" />
        <inertia
          ixx="0.232225456967381"
          ixy="0.0"
          ixz="0.0"
          iyy="0.232225456967381"
          iyz="0.0"
          izz="0.232225456967381" />
      </inertial>
      <visual>
        <origin
          xyz="${-0.1/3} 0 ${-0.1/3}"
          rpy="${pi/2} 0 0" />
        <geometry>
          <mesh
            filename="${wheel_mesh}" />
        </geometry>
        <material
          name="black">
        </material>
      </visual>
      <collision>
        <origin
          xyz="${-0.1/3} 0 ${-0.1/3}"
          rpy="${pi/2} 0 0" />
        <geometry>
          <mesh
            filename="${wheel_mesh}" />
        </geometry>
      </collision>
    </link>
    <joint
      name="rightFront_wheel_joint"
      type="continuous">
      <origin
        xyz= "${x} ${y} ${z}" 
        rpy="0 0 0" /> <!-- xyz= "0.0600000000000003 -0.178955289353836 -0.0124450740677247" -->
      <parent
        link="${parent}" />
      <child
        link="rightFront_wheel_link" />
      <axis
        xyz="0 1 0" />
    </joint>
    <!-- Extensions -->
    <xacro:kani_wheel_gazebo link_name="rightFront_wheel_link"/>
    <xacro:kani_wheel_trans joint_name="rightFront_wheel_joint"/>
  </xacro:macro>

  <xacro:macro name="rf_steer" params="parent x y z">
    <link name="rightFront_steer_link">
      <inertial>
        <origin
          xyz="0 0 0"
          rpy="${pi/2} 0 ${pi}" /><!--0.00222524026865972 0.173009757872407 -0.000157420245397055-->
        <mass
          value="0.0963917377366023" />
        <inertia
          ixx="0.232225456967381"
          ixy="0.0"
          ixz="0.0"
          iyy="0.232225456967381"
          iyz="0.0"
          izz="0.232225456967381" />
      </inertial>
      <visual>
        <origin
          xyz="0.013 -0.01 0"
          rpy="${pi/2} 0 ${pi}" />
        <geometry>
          <mesh
            filename="${steer_mesh}" />
        </geometry>
        <material
          name="black">
        </material>
      </visual>
      <collision>
        <origin
          xyz="0.013 -0.01 0"
          rpy="${pi/2} 0 ${pi}" />
        <geometry>
          <mesh
            filename="${steer_mesh}" />
        </geometry>
      </collision>
    </link>
    <joint
      name="rightFront_steer_joint"
      type="revolute">
      <origin
        xyz= "${x} ${y} ${z}" 
        rpy="0 0 0" /> <!-- xyz= "0.0600000000000003 -0.178955289353836 -0.0124450740677247" -->
      <parent
        link="${parent}" />
      <child
        link="rightFront_steer_link" />
      <axis
        xyz="0 0 1" />
      <limit
        lower="${-pi/2}"
        upper="${pi/2}"
        effort="500"
        velocity="500"
      />
    </joint>
    <!-- Extensions -->
    <xacro:kani_steer_gazebo link_name="rightFront_steer_link"/>
    <xacro:kani_steer_trans joint_name="rightFront_steer_joint"/>
  </xacro:macro>



