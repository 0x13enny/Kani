<launch>
  <arg name="wheel_port"              default="/dev/ttyUSB1"/>
  <arg name="wheel_baud_rate"         default="57600"/>

  <arg name="steer_port"              default="/dev/ttyUSB0"/>
  <arg name="steer_baud_rate"         default="115200"/>

  <arg name="namespace"               default="kani"/>

  <arg name="use_moveit"              default="false"/>
  <arg name="use_joint_state"         default="true"/> <!--get encoder info-->
  <arg name="use_cmd_vel"             default="true"/> <!--subscribe to /cmd_vel-->

  <!-- Load controller parameters -->
  <param name="dynamixel_info"          value="$(find kani_ros_control)/config/kani_motors_config.yaml"/>

  <!-- Power motors -->
  <node name="power" pkg="dynamixel_workbench_controllers" type="dynamixel_workbench_controllers"
        required="true" output="screen" args="$(arg wheel_port) $(arg wheel_baud_rate)">
    <param name="use_moveit"              value="$(arg use_moveit)"/>
    <param name="use_joint_states_topic"  value="$(arg use_joint_state)"/>
    <param name="use_cmd_vel_topic"       value="$(arg use_cmd_vel)"/>
    <rosparam> 
      publish_period: 0.010
      dxl_read_period: 0.010
      dxl_write_period: 0.010
      <!-- set if use_cmd_vel is true -->
      mobile_robot_config:                
        seperation_between_wheels_x: 0.160
        seperation_between_wheels_y: 0.2
        radius_of_wheel: 0.033            
    </rosparam>
  </node>

  <!-- Steer motors -->
  <node name="steer" pkg="dynamixel_workbench_controllers" type="dynamixel_workbench_controllers_steer"
        required="true" output="screen" args="$(arg steer_port) $(arg steer_baud_rate)">
    <param name="use_moveit"              value="$(arg use_moveit)"/>
    <param name="use_joint_states_topic"  value="$(arg use_joint_state)"/>
    <param name="use_cmd_vel_topic"       value="$(arg use_cmd_vel)"/>
    <rosparam> 
      publish_period: 0.010
      dxl_read_period: 0.010
      dxl_write_period: 0.010
      <!-- set if use_cmd_vel is true -->
      mobile_robot_config:                
        seperation_between_wheels_x: 0.160
        seperation_between_wheels_y: 0.2
        radius_of_wheel: 0.033            
    </rosparam>
  </node>
</launch>
